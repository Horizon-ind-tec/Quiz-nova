rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin email constant
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'wizofclassknowledge@gmail.com';
    }

    // User profiles
    match /users/{userId} {
      allow get: if request.auth != null; 
      allow list: if request.auth != null; // Needed for Leaderboard
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Quiz results (subcollection of users)
    match /users/{userId}/quiz_results/{resultId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Study plans (subcollection of users)
    match /users/{userId}/studyPlans/{planId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Challenges
    match /challenges/{challengeId} {
      // Allow anyone to read a challenge so invite links work for friends who aren't logged in yet
      allow read: if true; 
      allow create: if request.auth != null;
      allow update: if request.auth != null; // Participants update their scores
      allow delete: if isAdmin();
    }

    // Videos
    match /videos/{videoId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      }
    }

    // Support requests
    match /support_requests/{requestId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
    
    // Settings (UPI details etc)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}