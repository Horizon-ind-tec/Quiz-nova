/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model. All data
 * is considered private and can only be accessed by the user who created it.
 * Anonymous users are permitted by the auth model but have no data access.
 *
 * Data Structure: The data is organized into a hierarchical structure where all
 * user-specific data (quizzes, questions, results) is stored in subcollections
 * under that user's root document in the `/users/{userId}` path. This path-based
 * security model is highly performant and secure.
 *
 * Key Security Decisions:
 * - No Public Data: All collections and documents require the user to be signed in.
 * - No User Listing: It is not possible to list all users in the `/users` collection.
 * - Strict Ownership: A user can only read or write data located within their own
 *   data tree (i.e., under their own `/users/{userId}` path). There is no concept
 *   of shared or collaborative data.
 * - Default Deny: Any access pattern not explicitly allowed is denied.
 *
 * Denormalization for Authorization: Each document that represents user content
 * (e.g., Quiz, QuizResult) contains a denormalized `userId` field. The rules
 * validate this field on creation to ensure it matches the authenticated user,
 * creating a strong, unchangeable link between the data and its owner. This

 * avoids slow and costly `get()` calls in subcollection rules.
 *
 * Structural Segregation: User profiles, quizzes, questions, and quiz results are
 * all stored in separate collections or subcollections. This clear separation
 * allows for simple, targeted security rules for each data type and improves
 * query performance by ensuring queries don't have to filter through mixed-entity
 * collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =============================================================================
    // Helper Functions
    // =============================================================================

    /**
     * Verifies that the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Verifies that the requesting user's UID matches the provided userId.
     * This is the core of the user-ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Verifies ownership for an existing document. Used for update and delete
     * operations to prevent acting on non-existent data.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * Validates the integrity of a User document on creation.
     * Ensures the document's internal ID matches its path ID.
     */
    function isValidNewUser(userId) {
      return request.resource.data.id == userId;
    }

    /**
     * Enforces immutability of core relational fields on a User document update.
     */
    function isImmutableUser() {
      return request.resource.data.id == resource.data.id;
    }

    /**
     * Validates the integrity of a Quiz document on creation.
     * Ensures the document's internal userId matches the owner's path.
     */
    function isValidNewQuiz(userId) {
      return request.resource.data.userId == userId;
    }

    /**
     * Enforces immutability of core relational fields on a Quiz document update.
     */
    function isImmutableQuiz() {
      return request.resource.data.userId == resource.data.userId;
    }

    /**
     * Validates the integrity of a Question document on creation.
     * Ensures the document's internal quizId matches its parent path.
     */
    function isValidNewQuestion(quizId) {
      return request.resource.data.quizId == quizId;
    }

    /**
     * Enforces immutability of core relational fields on a Question document update.
     */
    function isImmutableQuestion() {
      return request.resource.data.quizId == resource.data.quizId;
    }

    /**
     * Validates the integrity of a QuizResult document on creation.
     * Ensures the document's internal userId matches the owner's path.
     */
    function isValidNewQuizResult(userId) {
      return request.resource.data.userId == userId;
    }

    /**
     * Enforces immutability of core relational fields on a QuizResult document update.
     */
    function isImmutableQuizResult() {
      return request.resource.data.userId == resource.data.userId;
    }


    // =============================================================================
    // Collection Rules
    // =============================================================================

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get) A user `auth.uid: 'user123'` can read their own profile at `/users/user123`.
     * @deny  (get) A user `auth.uid: 'user456'` cannot read another user's profile at `/users/user123`.
     * @deny  (list) No user can list all documents in the `/users` collection.
     * @allow (create) A new user `auth.uid: 'user123'` can create their own profile at `/users/user123`.
     * @principle Restricts access to a user's own data tree and allows self-creation of a profile.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && isValidNewUser(userId);
      allow update: if isExistingOwner(userId) && isImmutableUser();
      allow delete: if isExistingOwner(userId);

      /**
       * @description Controls access to a user's private collection of quizzes.
       * @path /users/{userId}/quizzes/{quizId}
       * @allow (get, list) A user `auth.uid: 'user123'` can read or list their own quizzes at `/users/user123/quizzes`.
       * @deny  (get, list) A user `auth.uid: 'user456'` cannot access quizzes at `/users/user123/quizzes`.
       * @allow (create) User 'user123' can create a new quiz in their own collection.
       * @principle Enforces document ownership via path parameter for all operations.
       */
      match /quizzes/{quizId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && isValidNewQuiz(userId);
        allow update: if isExistingOwner(userId) && isImmutableQuiz();
        allow delete: if isExistingOwner(userId);

        /**
         * @description Controls access to questions within a user's private quiz.
         * @path /users/{userId}/quizzes/{quizId}/questions/{questionId}
         * @allow (get, list) User 'user123' can read/list questions for a quiz they own.
         * @deny  (get, list) User 'user456' cannot access questions for a quiz owned by 'user123'.
         * @allow (create) User 'user123' can create a new question within a quiz they own.
         * @principle Inherits ownership from the parent path, providing strict data containment.
         */
        match /questions/{questionId} {
          allow get: if isOwner(userId);
          allow list: if isOwner(userId);
          allow create: if isOwner(userId) && isValidNewQuestion(quizId);
          allow update: if isExistingOwner(userId) && isImmutableQuestion();
          allow delete: if isExistingOwner(userId);
        }
      }

      /**
       * @description Controls access to a user's private quiz results.
       * @path /users/{userId}/quizResults/{quizResultId}
       * @allow (get, list) A user `auth.uid: 'user123'` can read or list their own results at `/users/user123/quizResults`.
       * @deny  (get, list) A user `auth.uid: 'user456'` cannot access results at `/users/user123/quizResults`.
       * @allow (create) User 'user123' can create a new quiz result in their own collection.
       * @principle Enforces document ownership via path parameter for all operations.
       */
      match /quizResults/{quizResultId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && isValidNewQuizResult(userId);
        allow update: if isExistingOwner(userId) && isImmutableQuizResult();
        allow delete: if isExistingOwner(userId);
      }
    }
  }
}