
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if the user is an admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'wizofclassknowledge@gmail.com';
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow nested quiz results
      match /quiz_results/{resultId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
      
      // Allow nested study plans
      match /studyPlans/{planId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Challenges (Duels)
    match /challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.creatorId || 
        request.auth.uid == request.resource.data.friendId ||
        resource.data.friendId == null
      );
      allow delete: if isAdmin();
    }

    // Coaching Videos
    match /videos/{videoId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
      
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
      }
    }

    // Support Requests
    match /support_requests/{requestId} {
      allow create: if isAuthenticated();
      allow read, update: if isAdmin();
    }

    // App Settings (like UPI details)
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
