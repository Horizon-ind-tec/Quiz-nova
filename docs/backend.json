{
  "entities": {
    "Video": {
      "title": "Video",
      "description": "Represents a single coaching video.",
      "type": "object",
      "properties": {
        "class": { "type": "string", "description": "The class the video is for (e.g., '10th')." },
        "subject": { "type": "string", "description": "The name of the subject (e.g., 'Physics')." },
        "subCategory": { "type": "string", "description": "The name of the sub-category (e.g., 'Advance Math')." },
        "chapter": { "type": "string", "description": "The name of the chapter." },
        "title": { "type": "string", "description": "The title of the video." },
        "youtubeUrl": { "type": "string", "format": "uri", "description": "The full YouTube URL of the video." },
        "createdAt": { "type": "number", "description": "Timestamp of when the video was added." }
      },
      "required": ["class", "subject", "chapter", "title", "youtubeUrl", "createdAt"]
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com"]
  },
  "firestore": {
    "/videos/{videoId}": {
      "schema": { "$ref": "#/entities/Video" },
      "description": "Collection of all video coaching resources."
    }
  }
}
